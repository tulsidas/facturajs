{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "removeComments": true,
    "noLib": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "rootDir": "./src/"
  },
  "filesGlob": [
    "*.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

